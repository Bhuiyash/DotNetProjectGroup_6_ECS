@model IEnumerable<MVC_Client.Models.MVC_Model_Products>
@{
    ViewBag.Title = "Display";
}

<h2>Display</h2>

<p>
    @Html.ActionLink("Create New Product", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModelNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModelName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductImage)
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(mItem => item.ProductId)</td>
            <td>@Html.DisplayFor(mItem => item.CategoryId)</td>
            <td>@Html.DisplayFor(mItem => item.ModelName)</td>
            <td>@Html.DisplayFor(mItem => item.ModelNumber)</td>
            <td>@Html.DisplayFor(mItem => item.UnitCost)</td>
            <td>@Html.DisplayFor(mItem => item.Description)</td>
            <td>@Html.DisplayFor(mItem => item.ProductImage)</td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ProductId }) |
                @Html.ActionLink("Details", "Details", new { id = item.ProductId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ProductId })
            </td>
        </tr>
    }
</table>