@model IEnumerable<Ecommerce_MVC.Models.Category>

@{
    ViewBag.Title = "Category";
}

<div style="background-color:lemonchiffon">
    <h2 style="padding-bottom:50px; text-align-last:center; color:Red"><b>CATEGORY</b></h2>
    <div class="row" style="margin-left:50px">


        @foreach (var item in Model)
        {

            <div class="col-md-4">
                <div class="card" style="width:24rem; ">

                    <img src="@item.CategoryImage" class="card-img-top" style="width:250px; height:200px" />
                    <div class="card-body">

                        <div> <h4><b>@item.CategoryName</b></h4></div>
                        <div> <h4><b>@item.Description</b></h4></div>

                    </div>
                </div>
            </div>
        }




    </div>

</div>



